# Base image
FROM node:24-slim AS base
WORKDIR /app
USER root
RUN apt-get update && apt-get install -y --no-install-recommends \
        libsqlite3-0 \
    && rm -rf /var/lib/apt/lists/*

# Development stage
FROM base AS development
RUN apt-get update && apt-get install -y --no-install-recommends \
        build-essential \
        python3 \
        libsqlite3-dev \
    && rm -rf /var/lib/apt/lists/*
COPY package*.json ./
RUN npm ci
COPY . .
ENV NODE_ENV=development
EXPOSE 3000 9230
CMD ["npm", "run", "dev"]

# Build stage
FROM development AS build
RUN npm run build

# Production stage
FROM base AS production
USER root

RUN apt-get update && apt-get install -y --no-install-recommends \
libsqlite3-dev \
&& rm -rf /var/lib/apt/lists/*

COPY package*.json ./
RUN npm ci --omit=dev
COPY --from=build /app/dist ./dist
VOLUME ["/app/data"]
EXPOSE 3000
ENV NODE_ENV=production
CMD ["node", "dist/server.js"]
